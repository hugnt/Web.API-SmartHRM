@{
    ViewData["Title"] = "TRASH - DEDUCTIONLIST";
}
@section Styles{
    <!-- gridjs css -->
    <link rel="stylesheet" href="~/assets/libs/gridjs/theme/mermaid.min.css" />

    <!-- Sweet Alert css-->
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

}
<div class="row bodyContent">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom-dashed">
                <div class="row g-4 align-items-center">
                    <div class="col-sm">
                        <div>
                            <div class="btn-group">
                                <button class="btn btn-light" type="button">
                                    Others
                                </button>
                                <button type="button"
                                        class="btn btn-light dropdown-toggle dropdown-toggle-split"
                                        data-bs-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false"></button>
                                <div class="dropdown-menu">
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Salary/DeductionList">
                                        <i class="ri-arrow-left-up-line align-middle me-1"></i>DeductionList
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-auto">
                        <div class="d-flex flex-wrap align-items-start gap-2">
                            <button type="button" class="btn btn-outline-primary btnCheckTool"
                                    id="btnRestoreListCheck">
                                <i class="ri-refresh-line align-bottom ri-1x"></i>
                            </button>
                            <button type="button" class="btn btn-outline-danger btnCheckTool"
                                    id="btnRemoveListCheck">
                                <i class="ri-delete-bin-2-line align-bottom ri-1x"></i>
                            </button>
                            <button type="button" class="btn btn-outline-warning" id="btnOpenCheck">
                                <i class="ri-edit-box-line align-bottom ri-1x"></i>
                            </button>

                            <button id="btnExport" type="button" class="btn btn-info">
                                <i class="ri-printer-line align-bottom me-1"></i>
                                Export
                            </button>
                            <button type="button" class="btn btn-primary" data-bs-toggle="collapse"
                                    data-bs-target="#collapseFilter" aria-expanded="false"
                                    aria-controls="collapseFilter">
                                <i class="ri-equalizer-fill me-1 align-bottom"></i>Filters
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="collapse" id="collapseFilter">
                <div class="card-body border-bottom-dashed border-bottom">
                    <form>
                        <div class="row g-3">
                            <div class="col-xl-6">
                                <div class="search-box">
                                    <input type="text" class="form-control search" id="searchBoxFilter"
                                           placeholder="Search for something..." />
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-xl-6">
                                <div class="row g-3">
                                    <div class="col-sm-4">
                                        <div class="">
                                            <input type="text" class="form-control"
                                                   id="datepicker-range" data-provider="flatpickr"
                                                   data-date-format="d M, Y" data-range-date="true"
                                                   placeholder="Select date" disabled />
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-sm-4">
                                        <div id="select-status">
                                            <select class="form-control" data-plugin="choices"
                                                    data-choices data-choices-search-false
                                                    name="choices-single-default" id="sellectBoxFilter">
                                                <option value="name" selected>All</option>
                                                <option value="id">Id</option>
                                                <option value="name">Deduction Name</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!--end col-->

                                    <div class="col-sm-4">
                                        <div>
                                            <button type="button" class="btn btn-primary w-100" id="btnFilter">
                                                <i class="ri-equalizer-fill me-2 align-bottom"></i>Filters
                                            </button>
                                        </div>
                                    </div>
                                    <!--end col-->
                                </div>
                            </div>
                        </div>
                        <!--end row-->
                    </form>
                </div>
            </div>

            <div class="card-body">
                <div id="table-product-list-all" class="table-card gridjs-border-none"></div>

                <div class="noresult" style="display: none">
                    <div class="text-center">
                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                   colors="primary:#121331,secondary:#08a88a"
                                   style="width: 75px; height: 75px"></lord-icon>
                        <h5 class="mt-2">Sorry! No Result Found</h5>
                        <p class="text-muted mb-0">
                            We've searched more than 150+ customer We did not find
                            any customer for you search.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Modals{
    @await Html.PartialAsync("~/Views/Shared/Partial/Notification/RestoreModelPartial.cshtml")
}

@section Scripts{

    <!-- Sweet Alerts js -->
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>

    <script>
        $("#sidebarSalary").addClass("show");
        $('a[href="#sidebarSalary"]').addClass("active");
        $('a[href="/Salary/DeductionList"]').addClass("active");
    </script>

    <script src="~/js/table_custom.js"></script>
    <script src="~/js/jquery.table2excel.js"></script>
    <script type="module" src="~/js/salary/trashDeductionList.js"></script>
}